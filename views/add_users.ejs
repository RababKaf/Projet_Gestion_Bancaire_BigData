<%- include('layout/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-primary">
          <h3 class="text-light">Ajouter Nouveau Utilisateur</h3>
        </div>
        <div class="card-body p-4">

          <form action="/add" method="post" enctype="multipart/form-data">
              <!-- CIN DYALO-->
              <div class="mb-3">
                <label for="nomComplet" class="form-label">CIN:</label>
                <input type="text" class="form-control" id="CIN" name="CIN" required>
              </div>
            
            
            <!-- Full Name Dyalo -->
            <div class="mb-3">
              <label for="nomComplet" class="form-label">Nom Complet:</label>
              <input type="text" class="form-control" id="nomComplet" name="nomComplet" required>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Email:</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <!-- Image -->
            <div class="mb-3">
              <label for="image" class="form-label">Image:</label>
              <input type="file" class="form-control form-control-lg" id="image" name="image" required/>
            </div>

            <!-- Phone -->
            <div class="mb-3">
              <label for="phone" class="form-label">Phone:</label>
              <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{10}" required>
            </div>

            <!-- Bank Account Information -->
            <h4>Informations du Compte Bancaire</h4>
            <!-- Account Number -->
            <div class="mb-3">
              <label for="accountNumber" class="form-label">Numéro de Compte:</label>
              <input type="text" class="form-control" id="accountNumber" name="accountNumber" required>
            </div>

            <!-- Account Type -->
            <div class="mb-3">
                <label for="accountType" class="form-label">Type de Compte:</label>
                <select class="form-select" id="accountType" name="accountType" required>
                  <option value="" disabled selected>Choisissez le type de compte</option>
                  <option value="Épargne">Épargne</option>
                  <option value="Chèques">Chèques</option>
                  <option value="Jeunesse">jeunesse</option>
                </select>
              </div>

            <!-- Balance -->
            <div class="mb-3">
              <label for="balance" class="form-label">Solde du Compte:</label>
              <input type="number" class="form-control" id="balance" value="0" name="balance" >
            </div>

            <div class="d-grid">
              <input type="submit" name="submit" value="Ajouter" class="btn btn-primary btn-lg" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
