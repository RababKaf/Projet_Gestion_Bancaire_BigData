<%- include('layout/header')%>

<div class="container ">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if(message){%>
        <div class="alert alert-dismissble fade show alert-<%=message.type%>" role="alert">
          <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
          <strong><%=message.message%></strong>
        </div>
        <%  }%>
        <form action="/search" method="get" class="mb-3">
          <div class="mb-3">
              <label for="accountType" class="form-label">Rechercher les utilisateurs de ce compte :</label>
              <select name="accountType" id="accountType" class="form-select" aria-label="Sélectionnez le type de compte">
                <option value="Épargne">Épargne</option>
                <option value="Chèques">Chèques</option>
                <option value="jeunesse">jeunesse</option>
                  <!-- Add more options for other account types -->
              </select>
          </div>
          <button type="submit" class="btn btn-primary">Rechercher</button>
      </form>
<div class="table-responsive">
  <% if(users!=''){ %>

    <table class="table table-striped text-center my-3">
<thead>
  <tr class="table-dark">
    <th>CIN</th>
    <th>Image</th>
    <th>Nom Complet</th>
    <th>E-Mail</th>
    <th>Télephonbe</th>
    <th>Action</th>
    
    
    
  </tr>
</thead>
<tbody>
  <% users.forEach((row,index) =>{ %>
  <tr class="align-middle">
  <td><%= row.CIN %> </td>
  <td><img src="<%=row.image %>" width="50" class="img-thumbnail" /></td>
  <td><%= row.name %> </td>
  <td><%= row.email %> </td>
  <td><%= row.phone %> </td>




    
</td>

  
<td> <a href="/edit/<%= row._id %> " class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
  <a href="/addAccount/<%= row._id %>" class="text-info" ><i class="fas fa-plus-circle fa-lg mx-1"></i>
</a>
  <a href="#" onclick="confirmDelete('<%= row._id %>')" class="text-danger">
    <i class="fas fa-trash fa-lg mx-1"></i>
  </tr>  <%}) %>
</tbody>

  </table>
  <% }else {%>
    <h1 class="text-center text-secondary mt-5"> Pas d'Utilisateurs</h1>
    <% }%>
</div>
    </div>
  </div>
 </div>
 
<%- include('layout/footer') %>